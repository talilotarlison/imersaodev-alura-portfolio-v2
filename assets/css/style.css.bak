@import url("https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap");

body{   background: linear-gradient(236.85deg, #041832 27.26%, #3468a7 96.03%);
  font-family: "Roboto", sans-serif;

}

header{
  display: flex;
  align-items: center;
  justify-content: space-between;

}

.box{
  display: flex;
}

.container{
  
  margin: 50px 50px;
  padding: 20px;
  box-shadow: 6px 6px 6px black;
   border-radius: 20px;
    background: #ecf4ff;
  color: #1c1c1c;
}

.foto-perfil{ 
	 border-radius: 460px;
  max-height: 160px;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
}

.tema > button {
  align-self: flex-end;
  font-size: 16px;
  padding: 8px 16px;
  background: #ECF4FF;
  box-sizing: border-box;
  border-radius: 100px;
  border: 2px solid #0E1D2F;
}


main {
     background: linear-gradient(230.65deg, #499CFE 27.49%, #9CC8FC 83.19%);
  border-radius: 20px;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.5);
  border-radius: 20px;
  text-align:center;
 margin: 20px 20px ;
  padding:30px;
  display: block;
  
}

ul {list-style: none;
}




a {
  text-decoration: none;
  color: black;

}
.logos > a:hover{

    opacity:  0.6;

}
figure:hover {
	   transform: scale(1.3);
	    opacity:  0.6;
}

a > img {

    width: 17px;
  height: 17px;
}

ul li:hover {
	   transform: scale(1.1);
	    opacity:  0.6;
}
